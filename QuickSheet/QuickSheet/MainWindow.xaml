<Window x:Class="QuickSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickSheet"
        xmlns:cs="clr-namespace:QuickSheet.CheatSheetPanel"
        mc:Ignorable="d"
        Title="QuickSheet" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="None"
        Icon="icon.ico">

    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />

        <Style x:Key="InfoPanelStyle"
               TargetType="{x:Type StackPanel}">
            <Setter Property="Background" Value="MediumSlateBlue" />
        </Style>
        <Style x:Key="InfoPanelCaptionStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding ExitCommand}" />
        <KeyBinding Key="Left" Command="{Binding SwitchSheetCommand}" CommandParameter="left" />
        <KeyBinding Key="Right" Command="{Binding SwitchSheetCommand}" CommandParameter="right" />
        <KeyBinding Key="Up" Command="{Binding AdjustFontSizeCommand}" CommandParameter="up" />
        <KeyBinding Key="Down" Command="{Binding AdjustFontSizeCommand}" CommandParameter="down" />
        <KeyBinding Key="r" Command="{Binding ReloadSheetsCommand}" />
        <KeyBinding Key="m" Command="{Binding ToggleDarkModeCommand}" />
        <KeyBinding Key="l" Command="{Binding ToggleLockCommand}" />
        <KeyBinding Key="F2" Command="{Binding ToggleSheetsInfoCommand}" />
        <KeyBinding Key="F10" Command="{Binding ToggleShortcutsInfoCommand}" />
        <KeyBinding Key="D1" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="1" />
        <KeyBinding Key="D2" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="2" />
        <KeyBinding Key="D3" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="3" />
        <KeyBinding Key="D4" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="4" />
        <KeyBinding Key="D5" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="5" />
        <KeyBinding Key="D6" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="6" />
        <KeyBinding Key="D7" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="7" />
        <KeyBinding Key="D8" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="8" />
        <KeyBinding Key="D9" Command="{Binding ShowSheetAtPositionCommand}" CommandParameter="9" />
    </Window.InputBindings>

    <DockPanel>
        <StackPanel DockPanel.Dock="Right"
                    Orientation="Horizontal">
            <StackPanel.LayoutTransform>
                <RotateTransform Angle="90" />
            </StackPanel.LayoutTransform>

            <Button Command="{Binding ToggleSheetsInfoCommand}">Sheets</Button>
            <Button Command="{Binding ToggleShortcutsInfoCommand}">Shortcuts</Button>
        </StackPanel>
        <Grid>
            <Grid>
                <cs:CheatSheetView DataContext="{Binding CheatSheetViewModel}" />
            </Grid>
            <Grid Visibility="{Binding SheetsInfoPanelVisible, Converter={StaticResource VisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1"
                            Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Style="{StaticResource InfoPanelCaptionStyle}">Sheets</TextBlock>
                    <DataGrid AutoGenerateColumns="False"
                              ItemsSource="{Binding CheatSheetPositions}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sheet"
                                                Binding="{Binding Item1}" />
                            <DataGridTextColumn Header="Position"
                                                Binding="{Binding Item2}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
            <Grid Visibility="{Binding ShortcutsInfoPanelVisible, Converter={StaticResource VisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1"
                            Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Style="{StaticResource InfoPanelCaptionStyle}">Keyboard Shortcuts:</TextBlock>
                    <DataGrid AutoGenerateColumns="False"
                              ItemsSource="{Binding KeyboardShortcutsDictionary}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Command"
                                                Binding="{Binding Key}" />
                            <DataGridTextColumn Header="Shortcut"
                                                Binding="{Binding Value}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>