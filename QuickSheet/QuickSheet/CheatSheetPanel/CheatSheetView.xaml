<UserControl x:Class="QuickSheet.CheatSheetPanel.CheatSheetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:model="clr-namespace:QuickSheet.Model"
             xmlns:cheatSheetPanel="clr-namespace:QuickSheet.CheatSheetPanel"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:CallMethodAction TargetObject="{Binding}" 
                                MethodName="UpdateBaseFontSize" />
        </b:EventTrigger>
        <b:EventTrigger EventName="SizeChanged">
            <b:CallMethodAction TargetObject="{Binding}" 
                                MethodName="UpdateBaseFontSize" />
        </b:EventTrigger>
        <b:EventTrigger EventName="SizeChanged">
            <b:CallMethodAction TargetObject="{Binding}" 
                                MethodName="UpdateBaseFontSize" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <SolidColorBrush x:Key="BackgroundLight"
                         Color="Azure" />
        <SolidColorBrush x:Key="BackgroundDark"
                         Color="Black" />
        <SolidColorBrush x:Key="TextLight"
                         Color="Black" />
        <SolidColorBrush x:Key="TextDark"
                         Color="Azure" />
        <SolidColorBrush x:Key="PanelLight"
                         Color="WhiteSmoke" />
        <SolidColorBrush x:Key="PanelDark"
                         Color="DarkSlateGray" />
        <SolidColorBrush x:Key="HeaderLight"
                         Color="LightSkyBlue" />
        <SolidColorBrush x:Key="HeaderDark"
                         Color="DarkBlue" />
        
        <!-- Text color -->
        <Style TargetType="{x:Type TextBlock}"
               x:Key="TextStyle">
            <Setter Property="Foreground"
                    Value="{StaticResource TextLight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.DarkMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Foreground"
                            Value="{StaticResource TextDark}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Sheet body background -->
        <Style TargetType="ItemsControl"
               x:Key="BodyStyle">
            <Setter Property="Background"
                    Value="{StaticResource BackgroundLight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DarkMode}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource BackgroundDark}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Section body background -->
        <Style TargetType="Grid"
               x:Key="SectionContentStyle">
            <Setter Property="Margin"
                    Value="8 8 0 0" />
            <Setter Property="Background"
                    Value="{StaticResource PanelLight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.DarkMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource PanelDark}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Sheet header -->
        <Style TargetType="{x:Type TextBlock}" 
               x:Key="TitleStyle"
               BasedOn="{StaticResource TextStyle}">
            <Setter Property="FontFamily" 
                    Value="Arial" />
            <Setter Property="FontSize"
                    Value="{Binding TitleFontSize}" />
            <Setter Property="FontWeight" 
                    Value="Bold" />
            <Setter Property="Background"
                    Value="{StaticResource HeaderLight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DarkMode}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource HeaderDark}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Section header -->
        <Style TargetType="{x:Type TextBlock}" 
               x:Key="SectionNameStyle"
               BasedOn="{StaticResource TextStyle}">
            <Setter Property="FontFamily" 
                    Value="Arial" />
            <Setter Property="FontSize" 
                    Value="{Binding DataContext.SectionFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Setter Property="FontWeight" 
                    Value="Bold" />
            <Setter Property="Background"
                    Value="{StaticResource HeaderLight}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.DarkMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource HeaderDark}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Cheat caption -->
        <Style TargetType="{x:Type TextBlock}" 
               x:Key="CaptionStyle"
               BasedOn="{StaticResource TextStyle}">
            <Setter Property="FontFamily" 
                    Value="Arial" />
            <Setter Property="FontSize" 
                    Value="{Binding DataContext.CaptionFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Setter Property="FontWeight" 
                    Value="Bold" />
        </Style>
        
        <!-- Cheat entry -->
        <Style TargetType="{x:Type TextBlock}" 
               x:Key="EntryStyle"
               BasedOn="{StaticResource TextStyle}">
            <Setter Property="FontFamily"
                    Value="Courier New" />
            <Setter Property="FontSize" 
                    Value="{Binding DataContext.EntryFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Style>
        
        <DataTemplate x:Key="EntryDataTemplate">
            <TextBlock Margin="4" 
                       Padding="4,0" 
                       Style="{StaticResource EntryStyle}"
                       Text="{Binding}" />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type model:Cheat}">
            <StackPanel Orientation="Vertical" 
                        Margin="0 0 12 0">
                <TextBlock Style="{StaticResource CaptionStyle}"
                           Text="{Binding Caption}" />
                <ItemsControl ItemsSource="{Binding Entries}" 
                              ItemTemplate="{StaticResource EntryDataTemplate}" />
            </StackPanel>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type cheatSheetPanel:SectionContent}">
            <Grid Style="{StaticResource SectionContentStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" 
                           Style="{StaticResource SectionNameStyle}"
                           Padding="4"
                           Visibility="{Binding IsNotRootSection, Converter={StaticResource BoolToVisibilityConverter}}"
                           Text="{Binding Title}">
                </TextBlock>
                <ItemsControl 
                    Grid.Row="1" 
                    Padding="4"
                    ItemsSource="{Binding Cheats}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" 
                                       Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Style="{StaticResource TitleStyle}"
                   TextAlignment="Center"
                   Padding="4"
                   Text="{Binding CheatSheet.Title, Mode=OneWay}">
        </TextBlock>
        
        <ItemsControl Grid.Row="1" 
                      Style="{StaticResource BodyStyle}"
                      ItemsSource="{Binding Sections}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" 
                               Orientation="Vertical">
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
